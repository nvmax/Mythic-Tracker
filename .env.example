# Discord Bot Configuration
# Get your bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_token_here

# Check interval in seconds (how often to check for new runs)
CHECK_INTERVAL=60

# Database file name (will be stored in /app/data/ when using Docker)
DATABASE_FILE=mythictracker.db

# Raider.io API configuration
RAIDERIO_API_URL=https://raider.io/api/v1
API_ACCESS_KEY=your_raiderio_api_key_here

# Flask web server configuration
FLASK_SECRET_KEY=your_secret_key_here
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Bot invite URL (replace YOUR_CLIENT_ID with your bot's client ID)
BOT_INVITE_URL=https://discord.com/oauth2/authorize?client_id=YOUR_CLIENT_ID&permissions=2048&scope=bot%20applications.commands

# Allowed channel names (comma-separated, case-insensitive)
ALLOWED_CHANNELS=mythic-tracker,bot-commands,general
